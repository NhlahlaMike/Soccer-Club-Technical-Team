//---------------------------------------------------------------------------

#pragma hdrstop

#include "TPlayer_u.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
TPlayer::TPlayer()
{
	 name = "Unknown" ;
	 birthDate = "1800/01/01";
	 position = "xx";
	 jersyNo = 0;
}
void TPlayer::setPlayer(AnsiString nm,AnsiString bD,AnsiString pos,int jN)
{
	name = nm;
	birthDate = bD;
	position = pos;
	jersyNo = jN;
}
AnsiString TPlayer::getName()
{
	return this->name;
}
AnsiString TPlayer::getBirthDate()
{
	return this->birthDate;
}
AnsiString TPlayer::getPosition()
{
	return this->position;
}
int TPlayer::getJersyNo()
{
    return this->jersyNo;
}
TPlayer::~TPlayer()
{

}
